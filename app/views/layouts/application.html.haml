%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Estate Sales"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %script{src: "//cdn.sublimevideo.net/js/qizm83i1.js", type: "text/javascript"}
  %body
    %p.notice= notice
    %p.alert= alert
    .contain-to-grid
      %nav.top-bar
        %ul.title-area
          %li.name
            %h1
              = link_to "World Artwork", products_path
        %section.top-bar-section
          %ul.right
            %li.divider
            %li= link_to "Blog", articles_path
            %li.divider
            %li= link_to "Browse Products", products_path
            %li.divider
            %li= link_to "Price List"
            %li.divider
            %li= link_to "Contact Us"
            %li.divider
            %li= link_to "Cart"

    .row
      .small-13.columns
        #world-map{:style => "width: 100%; height: 500px"}
          :javascript
            $(function(){
              $('#world-map').vectorMap({map: 'world_mill_en'});
            });
    .row
      .small-4.columns
        %h2.subheader Art
      .small-4.columns
        %h2.subheader Music
      .small-4.columns
        %h2.subheader Videos

    .row
      .small-4.columns
        = yield
    .row
      .small-4.columns= yield
    .row
      .small-4.columns= yield
