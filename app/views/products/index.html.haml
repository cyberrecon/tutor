%h1 Estate Sales coming up!
%table
  %thead
    %tr
      %th Name
      %th Saledate
      %th Price
      %th
      %th
      %th
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.saledate
        %td= product.price
        %td= link_to 'Show', product
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path, class: 'button radius'


